<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="?spacer32dp"
            android:layout_marginStart="?spacer8dp"
            android:layout_marginTop="?spacer16dp"
            android:layout_marginBottom="?spacer8dp"
            android:text="Countries"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_View_Countries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?spacer8dp"/>

    </LinearLayout>
</merge>