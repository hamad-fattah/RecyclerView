<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    tools:showIn="@layout/fragment_main"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="?spacer8dp"
        android:layout_marginRight="?spacer8dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="?spacer32dp"
            android:layout_marginTop="?spacer16dp"
            android:layout_marginStart="?spacer8dp"
            android:layout_marginBottom="?spacer8dp"
            android:text="Football Teams"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Recycler_View_Football"
            android:layout_marginTop="?spacer8dp"
            android:layout_marginBottom="?spacer24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</merge>